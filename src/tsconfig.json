{
    "compilerOptions": {
      "baseUrl": ".",
      "declaration": false,
      "stripInternal": true,
      "experimentalDecorators": true,
      "strictNullChecks": false,
      "noImplicitAny": false,
      "module": "es2015",
      "moduleResolution": "node",
      "paths": {
        "@angular/core": ["node_modules/@angular/core"],
        "rxjs/*": ["node_modules/rxjs/*"],
        "yoyo-ng-module":["./"],
        "yoyo-ng-module/*":["./*"],
        "@abp/*": ["./abp/*"],
        "yoyo-ng-module/theme": ["./theme"],
        "yoyo-ng-module/util": ["./util"]
      },
      "rootDir": ".",
      "outDir": "dist",
      "sourceMap": true,
      "inlineSources": true,
      "target": "es5",
      "skipLibCheck": true,
      "lib": [
        "es2015", 
        "dom"
      ]
    },
    "files": [
      "index.ts",
      "typings.d.ts"
    ],
    "angularCompilerOptions": {
      "strictMetadataEmit": true
    }
  }